<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wall4EarthRoom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="100">
    
    <Button android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="43"
        android:visibility="invisible"/>
    <LinearLayout android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="11"
        android:orientation="vertical"
        android:weightSum="100">
  <Button android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:visibility="invisible"/>
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="58">
         <Button
        android:id="@+id/hanging_walk"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:onClick="goOut" 
        android:clickable="false"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="100">
<Button android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="40"
    android:visibility="invisible"/>
       
        <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:weightSum="100">
                        <Button android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="60"
                android:visibility="invisible"/>
       <Button android:id="@+id/peephole_doorwall"
           		android:onClick="zoomPainting"
           		android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="40"
                android:clickable="false"
                     android:background="@android:color/transparent" />
        </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100">
            <Button  android:id="@+id/door_handle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:onClick="openTheDoor"
                android:visibility="gone"
                     android:background="@android:color/transparent" />
        </LinearLayout>
        
    </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
    

    <ImageView
        android:id="@+id/queen_rabbit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:onClick="zoomDownQueenRabbit" />

</RelativeLayout>