<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/end_scene"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndCreditsActivity"
    android:background="@drawable/coil" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="46" 
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="12"
            android:orientation="vertical"
            android:weightSum="100" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="25" 
                android:visibility="invisible"/>

            <Button
                android:id="@+id/coil"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:onClick="strike"
                android:background="@android:color/transparent"  />
        </LinearLayout>
    </LinearLayout>

        <ImageView
            android:id="@+id/letter_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:background="@drawable/tesla_letter"
            android:onClick="closeLetter"
            android:layout_centerHorizontal="true" />
 
<ImageView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/success"/>
</RelativeLayout><!-- From: file:/Users/user/Downloads/FourElements/app/src/main/res/layout/end_coil_scene.xml -->